# Bot Configuration
NODE_ENV=development # development or production
LOG_LEVEL=info # debug, info, warn, error

# Discord Bot
DISCORD_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_GUILD_ID=your_discord_guild_id

# Discord Channels
DAILY_CHANNEL_ID=your_daily_challenge_channel_id

# Database
MONGODB_USER=your_mongodb_username
MONGODB_PASS=your_mongodb_password
MONGODB_HOST=your_mongodb_host.mongodb.net

# AI Service (DeepSeek or OpenAI)
AI_API_KEY=your_ai_api_key
AI_API_BASE_URL=https://api.deepseek.com/v1 # Optional, for DeepSeek
AI_MODEL=deepseek-chat # or any other model name

# Codeforces API - No auth required, but could add rate limiting settings
CF_API_RATE_LIMIT=10 # requests per minute
